*
  box-sizing border-box

body
  font-family Verdana, "sans-serif"
  font-size 16px

.comments-area
  max-width 800px
  margin 0 auto

.comment-header
  display flex

.comment-avatar img
  width 50px
  margin-right 10px

.comment-author
  font-style normal
  font-size 18px
  margin-right 20px

.comment-time
  font-size 14px
  color #adb3c5

.comment-box
  width 600px
  padding 20px
  margin-bottom 20px
  background #f3f5f7

.comments
  margin-bottom 30px
