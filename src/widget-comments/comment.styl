.comments-area
  max-width 800px
  margin 10px auto 200px

.comment-header
  display flex

.comment-avatar img
  width 50px
  margin-right 10px

.comment-author
  font-style normal
  font-size 18px
  margin-right 20px

.comment-time
  font-size 14px
  color #adb3c5

.comment-box
  position relative
  width 600px
  padding 20px
  margin-bottom 20px
  background #f3f5f7
  border-radius 5px

.comments
  margin-bottom 30px

#author
  width 240px
  height 35px
  border-radius 5px
  padding-left 10px
  font-size 14px
  font-family inherit
  border 1px solid #e4e4e4
  &:active, &:focus
    outline none

#comment
  width 600px
  height 150px
  border-radius 5px
  padding 10px 10px
  font-size 14px
  font-family inherit
  border 1px solid #e4e4e4
  &:active, &:focus
    outline none

.submit
  width 240px
  height 45px
  font-weight 500
  font-size 14px
  font-family inherit
  text-transform uppercase
  background-color #4376de
  color #fff
  border-radius 5px
  border 0
  &:active, &:focus
    outline none
  &:hover
    cursor pointer
    background-color #1d57ce

.submit-disabled
  width 240px
  height 45px
  font-weight 500
  font-size 14px
  font-family inherit
  text-transform uppercase
  background-color #e0e0e0
  color #fff
  border-radius 5px
  border 0
  &:active, &:focus
    outline none
  
.delete-comment
  position absolute
  right 0
  bottom 0
  width 180px
  height 30px
  font-weight 500
  font-size 12px
  font-family inherit
  text-transform uppercase
  background-color #ebebeb
  color #cfcfcf
  border-radius 5px
  border 0
  &:active, &:focus
    outline none
  &:hover
    cursor pointer
    background-color #ff5d5d